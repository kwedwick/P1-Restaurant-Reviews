@model IEnumerable<P1RestaurantReviewer.Domain.Restaurant>
@{
    ViewData["Title"] = "Home Page";
}

<main role="main">

    <div class="jumbotron">
        <div class="container">
            <h1 class="display-3">Welcome!</h1>
            <p>Find restaurants by name and zipcode to find your next meal!</p>
            <p><a class="btn jumbotronButton btn-lg" asp-controller="Restaurant" asp-action="Index" role="button">Search Restaurants &raquo;</a></p>
        </div>
    </div>

    <div class="container">
        <h2>A few restaurants to start you off...</h2>
    <br/>
        <div class="row align-items-center">
            @foreach (var item in Model)
            {
                <div class="col-md-3 m-3 card">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">Location: @item.Location</p>
                        <p class="card-text">Zip code: @item.ZipCode</p>
                        <p>
                            <a class="btn btn-secondary" asp-controller="Restaurant" asp-action="Details" asp-route-id="@item.Id">
                                View details &raquo;
                            </a>
                        </p>
                    </div>
                    
                </div>
            }

        </div>

        <hr>

    </div>

</main>
